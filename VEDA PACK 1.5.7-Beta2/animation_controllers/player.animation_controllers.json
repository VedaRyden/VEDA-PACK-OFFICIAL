{
 "format_version": "1.10.0",
 "animation_controllers": {
  "controller.animation.player.loncat": {
   "initial_state": "default",
   "states": {
    "charge" : {
					"animations" : [ "third_person_crossbow_equipped" ],
					"transitions" : [
						{
							"default" : "query.get_equipped_item_name != 'crossbow' || (query.item_remaining_use_duration <= 0.0 && !query.item_is_charged)"
						},
						{
							"hold" : "query.item_is_charged"
						}
					]
				},
    "default": {
     "transitions": [
      {
       "loncat": "q.is_jumping  && q.is_on_ground<1  && q.anim_time>0"
      },
      {
							"hold" : "query.item_is_charged"
						},
						{
							"charge" : "query.item_remaining_use_duration > 0.0"
						}
     ]
    },
    "jatuh": {
     "transitions": [
      {
       "loncat": "q.is_jumping && !q.is_on_ground"
      }
     ]
    },
    "loncat": {
     "sound_effects": [
      {
       "effect": "orangnya_loncat"
      }
     ],
     "transitions": [
      {
       "jatuh": "!q.is_jumping && q.is_on_ground"
      }
     ]
    }
   }
  },
  "controller.animation.player.pegang": {
   "initial_state": "awal",
   "states": {
    "awal": {
     "transitions": [
      {
       "Bawa": "query.is_item_equipped"
      }
     ]
    },
    "Bawa": {
     "sound_effects": [
      {
       "effect": "bawa_item"
      }
     ],
     "transitions": [
      {
       "Ganti": "!query.is_item_equipped"
      }
     ]
    },
    "Ganti": {
     "sound_effects": [
      {
       "effect": "ganti_item"
      }
     ],
     "transitions": [
      {
       "Bawa": "query.is_item_equipped"
      }
     ]
    }
   }
  },
  "controller.animation.player.prot": {
   "initial_state": "default",
   "states": {
    "default": {
     "transitions": [
      {
       "prot": "q.is_sneaking  && q.anim_time>0"
      }
     ]
    },
    "prot": {
     "sound_effects": [
      {
       "effect": "steve_prot"
      }
     ],
     "transitions": [
      {
       "tegak": "!q.is_sneaking"
      }
     ]
    },
    "tegak": {
     "sound_effects": [
      {
       "effect": "steve_tegak"
      }
     ],
     "transitions": [
      {
       "prot": "q.is_sneaking"
      }
     ]
    }
   }
  },
  "map_player" : {
					"transitions" : [
						{
							"paperdoll" : "variable.is_paperdoll"
						},
						{
							"first_person" : "variable.is_first_person"
						},
						{
							"third_person" : "!variable.map_face_icon && !variable.is_first_person"
						}
					]
				},
				"paperdoll" : {
					"animations" : [ "humanoid_base_pose", "look_at_target_ui", "move.arms", "move.legs", "cape" ],
					"transitions" : [
						{
							"first_person" : "!variable.is_paperdoll && variable.is_first_person"
						},
						{
							"map_player" : "variable.map_face_icon"
						},
						{
							"third_person" : "!variable.is_paperdoll && !variable.is_first_person"
						}
					]
				},
  "controller.animation.player.turu": {
   "initial_state": "asal",
   "states": {
    "asal": {
     "transitions": [
      {
       "turu": "q.is_sleeping  && q.anim_time>0"
      }
     ]
    },
    "bangun": {
     "sound_effects": [
      {
       "effect": "player_bangun"
      }
     ],
     "transitions": [
      {
       "turu": "q.is_sleeping"
      }
     ]
    },
    "turu": {
     "sound_effects": [
      {
       "effect": "player_turu"
      }
     ],
     "transitions": [
      {
       "bangun": "!q.is_sleeping"
      }
     ]
    }
   }
  }
 }
}